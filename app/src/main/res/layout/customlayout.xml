<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/reVeiwLayout" >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImage"
        android:layout_width="78dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/UserName"
        android:layout_width="259dp"
        android:layout_height="31dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:text="John Doe"
        android:textAllCaps="false"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/userImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/superOne"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/round_edges"
        android:backgroundTint="@color/colorLightBackground"
        android:fontFamily="sans-serif-light"
        android:text="Empty/Private"
        android:textAlignment="center"
        android:textColor="@color/colorFontColorMatchBackground"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/userImage"
        app:layout_constraintTop_toBottomOf="@+id/UserName" />

    <TextView

        android:id="@+id/superTwo"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/round_edges"
        android:backgroundTint="@color/colorLightBackground"
        android:fontFamily="sans-serif-light"
        android:text="Empty/Private"
        android:textAlignment="center"
        android:textColor="@color/colorFontColorMatchBackground"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/superOne"
        app:layout_constraintTop_toBottomOf="@+id/UserName" />
</androidx.constraintlayout.widget.ConstraintLayout>